# Storage Configuration
# Options: memory (default), mariadb
STORAGE_TYPE=memory

# MariaDB Configuration (Docker)
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=videocall
DB_USER=videocall_user
DB_PASSWORD=videocall_password
DB_MAX_CONNECTIONS=20
DB_MAX_IDLE_CONNECTIONS=5

# TURN Server Configuration
TURN_SECRET=my_turn_secret
TURN_TTL=2h
# Specify your machine host ip instead of internal ip from docker network
TURN_HOST=192.168.0.34:3478

# JWT Configuration
JWT_SECRET=my_jwt_secret
JWT_TTL=2h

# How long user session will live before logged out
REFRESH_TOKEN_TTL=24h

# VAPID Keys (for Web Push Notifications)
# Generate using: web-push generate-vapid-keys
VAPID_PUBLIC_KEY=BIa8K... (your public key here)
VAPID_PRIVATE_KEY=xyzABC... (your private key here)

# How long empty room should live
ROOM_TTL=4h
# How often rooms will check for expiration
ROOM_CLEAN_INTERVAL=60s